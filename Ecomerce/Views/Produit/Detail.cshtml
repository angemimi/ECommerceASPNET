@model Ecomerce.Models.Produit
@{
	ViewBag.Title = "E-Commerce";
}
<h2>Détail d'un produit</h2>
<div class="panel panel-default">
	<div class="panel-heading">
		<span class="panel-title">@Model.Nom</span>
		<span class="right"><a asp-action="List">Retour</a></span>
	</div>
	<div class="panel-body">
		<div class="row">
			<label class="col-sm-2">Description</label>
			<p class="col-sm-10">@Model.Description</p>
		</div>
		<div class="row">
			<label class="col-sm-2">Catégorie</label>
			<p class="col-sm-6">@Model.Categorie</p>
		</div>
		<div class="row">
			<label class="col-sm-4">Prix</label>
			<p class="col-sm-4">@Model.Prix</p>
		</div>
	</div>
	<div class="panel-footer">
		<a asp-action="EditProductForm" asp-route-pId="@Model.IDProduit" class="btn btn-info">Editer</a>
		<a asp-action="RemoveProduct" asp-route-pId="@Model.IDProduit" class="btn btn-danger">Supprimer</a>
	</div>
</div>