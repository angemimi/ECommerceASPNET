@model Ecommerce.Models.ViewModels.ListeProduitsViewModels
@{
	ViewBag.Title = "E-Commerce";
}
<div class="table-responsive">
	<table class="table table-striped table-hover">
		<thead>
			<tr>
				<th>Nom</th>
				<th>Description</th>
				<th>Categotie</th>
				<th>Prix</th>
				<th colspan="2"></th>
			</tr>
		</thead>
		<tbody>
		@foreach (Produit p in Model.ProduitsLimitOffset())
		{
			<tr data-id="@p.IDProduit">
				<td>@p.Nom</td>
				<td>@p.Description</td>
				<td>@p.Categorie</td>
				<td>@p.Prix</td>
				<td><a asp-action="EditProductForm" asp-route-pId="@p.IDProduit" class="btn btn-info">Editer</a></td>
				<td><a asp-action="RemoveProduct" asp-route-pId="@p.IDProduit" class="btn btn-danger">Supprimer</a></td>
			</tr>
		}
		</tbody>
	</table>
</div>
<div page-model="@Model.Pagination" page-action="List" class="text-center">
</div>
