@model Ecomerce.Models.Produit
@{
	ViewBag.Title = "Modification d'un produit";
}
<h2>Modifier un Produit</h2>
<form asp-action="EditProduct" method="post">
	<input type="hidden" asp-for="@Model.IDProduit" value="@Model.IDProduit" />
	<div class="form-group row">
		<label class="col-sm-2">Nom</label>
		<div class="col-sm-6">
			<input asp-for="@Model.Nom" class="form-control focus" value="@Model.Nom"/>
		</div>
	</div>
	<div class="form-group row">
		<label class="col-sm-2">Catégorie</label>
		<div class="col-sm-6">
			<input asp-for="@Model.Categorie" class="form-control" value="@Model.Categorie" />
		</div>
	</div>
	<div class="form-group row">
		<label class="col-sm-2">Prix</label>
		<div class="col-sm-6">
			<input asp-for="@Model.Prix" class="form-control" value="@Model.Prix" />
		</div>
	</div>
	<div class="form-group row">
		<label class="col-sm-2">Description</label>
		<div class="col-sm-6">
			<textarea asp-for="@Model.Description" class="form-control">@Model.Description</textarea>
		</div>
	</div>
	<div class="btn-group">
		<a asp-action="List" class="btn btn-primary">Annuler</a>
		<button class="btn btn-success" type="submit">Valider</button>
	</div>
</form>
